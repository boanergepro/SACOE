doctype html

html(lang='en')
	
head
	title SACOE
	meta(charset='utf-8')
	meta(name="viewport" content="width=device-width, initial-scale=1.0")
	link(rel="stylesheet" href='../css/pace_theme_flags.css')
	link(rel="stylesheet" href='../css/materialize.css')
	link(rel="stylesheet" href='../css/main.css')
	link(rel="stylesheet" href='../css/icon.css')
	link(rel="stylesheet" href='../css/fuente.css')
	script(type="text/javascript" src="../js/jquery-2.1.1.min.js")
	script(type="text/javascript" src="../js/materialize.min.js")
	
body(class="Oswald")

	header

		nav(class="indigo top-nav")

			div(class="nav-wrapper")

				ul
					li(class="hide-on-large-only")
						a(class="sideNav" data-activates="slide-out")
							i(class="material-icons left") menu

				-//Mostrar en pantallas grandes
				a(href="/inicio" class="brand-logo Oswald margen-dere show-on-large hide-on-med-and-down") SACOE
				-//Mostrar en pantallas medianas y peque√±as
				a(href="/inicio" class="brand-logo Oswald show-on-medium-and-down hide-on-med-and-up") SACOE

				ul(id="nav-mobile" class="right")

					if rol_id == 1 
						li
							a(class='dropdown-button' data-activates='dropdown1')
								i(class="material-icons" id="active-notifi") notifications
									-//Aqui se colocara el puntico rojo cuando haya notificaciones

						
							ul(id='dropdown1' class='dropdown-content')
								li
									a(id="num-notifi" href="#!" class="col s12  black-text left") NOTIFICACIONES
										
								li(class="divider")
									-//Aqui se renderizaran las notificaciones

					li
						a(href="/logout")
							i(class="material-icons") exit_to_app

	main

		ul(id="slide-out" class="side-nav fixed")
			
			li(class="logo")
				img(class="responsive-img" src="../img/cac.jpg")

			li
			
				form(method="post" action="/buscar")

					div(class="input-field col s12 card")
						input(id="search" placeholder="Buscar..." class="deleteBorder" type="search" name="search")
						label(for="search")
			li.divider

			-// Administrador
			if rol_id == 1

				li(class="bold")
					a(href="/inicio" class="waves-effect waves-red") Inicio
						i(class="material-icons black-text") home 

				li(class="bold")
					a(href="/persona/nuevo" class="waves-effect waves-red") Agregar
						i(class="material-icons black-text") person_add

				li(class="bold")
					a(href="/persona/" class="waves-effect waves-red") Ganados
						i(class="material-icons black-text") wc

				li(class="bold")
					a(href="/estadisticas" class="waves-effect waves-red") Estadisticas
						i(class="material-icons black-text") equalizer
				li(class="bold active")
					a(href="/usuarios" class="waves-effect waves-red") Usuarios
						i(class="material-icons black-text") supervisor_account
			
			-//Coordinador
			if rol_id == 2
				li(class="bold")
					a(href="/inicio" class="waves-effect waves-red") Inicio
						i(class="material-icons black-text") home 

				li(class="bold")
					a(href="/persona/nuevo" class="waves-effect waves-red") Agregar
						i(class="material-icons black-text") person_add

				li(class="bold")
					a(href="/persona/" class="waves-effect waves-red") Ganados
						i(class="material-icons black-text") wc

				li(class="bold")
					a(href="/estadisticas" class="waves-effect waves-red") Estadisticas
						i(class="material-icons black-text") equalizer

			-//Analista - Lider de casa de paz
			if rol_id == 3
				li(class="bold")
					a(href="/inicio" class="waves-effect waves-red") Inicio
						i(class="material-icons black-text") home 

				li(class="bold")
					a(href="/persona/nuevo" class="waves-effect waves-red") Agregar
						i(class="material-icons black-text") person_add

			-//Usuario
			if rol_id == 4
				li(class="bold")
					a(href="/inicio" class="waves-effect waves-red") Inicio
						i(class="material-icons black-text") home



		div(class="row center")
			
			div(class="col s12")

				h4.center.margen-sup Usuarios registrados

				div.row

					div(class="col s12 margen-sup")
			
						ul(id="tabs-swipe-demo" class="tabs")
							li(class="tab col s3")
								a(href="#usuarios" class="indigo-text active waves-effect waves-red") Usuarios

							li(class="tab col s3") 
								a(href="#Analistas" class="indigo-text waves-effect waves-red") Analistas

							li(class="tab col s3")
								a(href="#coordinadores" class="indigo-text waves-effect waves-red") Coordinadores

							li(class="tab col s3")
								a(href="#administradores" class="indigo-text waves-effect waves-red") Administardores

						-//Usarios
						div(id="usuarios" class="col s12")

							div(class="row center")
			
								div(class="col s12")

									div#contenedor-boton-acciones-usuario
										
									table(class="bordered highlight")

										thead
											tr
												th.center Marcar
												th.center Nombre
												th.center Apellido
												th.center Username
												
										tbody

											each campo in usuarios
												tr
													td.center
														-// checked="checked"
														input(type="checkbox" class="filled-in" id="checkId-#{campo.dataValues.id}" data-persona_id="#{campo.dataValues.id}")
														label(for="checkId-#{campo.dataValues.id}")

													td.center= campo.dataValues.nombre
													td.center= campo.dataValues.apellido
													td.center= campo.dataValues.username

						-//Analistas
						div(id="Analistas" class="col s12")
							div(class="row center")
			
								div(class="col s12")

									div#contenedor-boton-acciones-analista
										
									table(class="bordered highlight")

										thead
											tr
												th.center Marcar
												th.center Nombre
												th.center Apellido
												th.center Username
												
										tbody

											each campo in analistas
												tr
													td.center
														-// checked="checked"
														input(type="checkbox" class="filled-in" id="checkId-#{campo.dataValues.id}" data-persona_id="#{campo.dataValues.id}")
														label(for="checkId-#{campo.dataValues.id}")

													td.center= campo.dataValues.nombre
													td.center= campo.dataValues.apellido
													td.center= campo.dataValues.username
						-//Coordinadores
						div(id="coordinadores" class="col s12")

							div(class="row center")
			
								div(class="col s12")

									div#contenedor-boton-acciones-coordinador
										
									table(class="bordered highlight")

										thead
											tr
												th.center Marcar
												th.center Nombre
												th.center Apellido
												th.center Username
												
										tbody

											each campo in coordinadores
												tr
													td.center
														-// checked="checked"
														input(type="checkbox" class="filled-in" id="checkId-#{campo.dataValues.id}" data-persona_id="#{campo.dataValues.id}")
														label(for="checkId-#{campo.dataValues.id}")

													td.center= campo.dataValues.nombre
													td.center= campo.dataValues.apellido
													td.center= campo.dataValues.username
						-//Administradores
						div(id="administradores" class="col s12")
							div(class="row center")
			
								div(class="col s12")

									div#contenedor-boton-acciones-administrador
										
									table(class="bordered highlight")

										thead
											tr
												th.center Marcar
												th.center Nombre
												th.center Apellido
												th.center Username
												
										tbody

											each campo in administradores
												tr
													td.center
														-// checked="checked"
														input(type="checkbox" class="filled-in" id="checkId-#{campo.dataValues.id}" data-persona_id="#{campo.dataValues.id}")
														label(for="checkId-#{campo.dataValues.id}")

													td.center= campo.dataValues.nombre
													td.center= campo.dataValues.apellido
													td.center= campo.dataValues.username
					
	footer
	
	script(type="text/javascript" src="../js/pace.js")
	script(type="text/javascript" src="../js/seleccionadorUsuario.js")
	script(type="text/javascript" src="../js/seleccionadorAnalista.js")
	script(type="text/javascript" src="../js/seleccionadorCoordinador.js")
	script(type="text/javascript" src="../js/seleccionadorAdministrador.js")
	script(type="text/javascript" src="../js/componentsMaterialize.js")
	script(type="text/javascript" src="../js/socket.js")