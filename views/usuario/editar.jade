doctype html

html(lang='en')
	
head
	title SACOE
	meta(charset='utf-8')
	meta(name="viewport" content="width=device-width, initial-scale=1.0")
	link(rel="stylesheet" href='../../css/materialize.css')
	link(rel="stylesheet" href='../../css/main.css')
	link(rel="stylesheet" href='../../css/icon.css')
	link(rel="stylesheet" href='../../css/fuente.css')
	script(type="text/javascript" src="../../js/jquery-2.1.1.min.js")
	script(type="text/javascript" src="../../js/materialize.min.js")
	
body(class="Oswald")

	header

		nav(class="indigo top-nav")

			div(class="nav-wrapper")

				ul
					li(class="hide-on-large-only")
						a(class="sideNav" data-activates="slide-out")
							i(class="material-icons left") menu

				a(href="../inicio" class="brand-logo Oswald margen-dere") SACOE

				ul(id="nav-mobile" class="right")

					li
						a(href="/salida")
							i(class="material-icons") exit_to_app

	main

		ul(id="slide-out" class="side-nav fixed")
			
			li(class="logo")
				img(class="responsive-img" src="../../img/cac.jpg")

			li(class="search")

				div(class="row center")
			
				form(method="post" action="/buscar" class="col s12")

					div(class="row")

						div(class="col s1")

						div(class="input-field col s10 card")

							input(id="search" placeholder="Buscar..." class="deleteBorder" type="text" name="search")
				
						div(class="col s1")

			li(class="bold")
				a(href="/inicio" class="waves-effect waves-red") Inicio
					i(class="material-icons") home

			li(class="bold")
				a(href="/persona/nuevo" class="waves-effect waves-red") Agregar
					i(class="material-icons") person_add
			li(class="bold")
				a(href="/persona/" class="waves-effect waves-red") Ganados
					i(class="material-icons") people

			li(class="bold")
				a(href="/estadisticas" class="waves-effect waves-red") Estadisticas
					i(class="material-icons") equalizer


		div(class="row center")
			
			div(class="col s12")
				div.row
					div(class="col s12 m2")
					div(class="col s12 m8")
						h4.center.margen-sup Usted esta por editar el rol de #{usuario.nombre} #{usuario.apellido}
						div.row
							div(class="col s12 margen-sup")
								form(method="post" action=`/usuario/editar/${usuario.id}`)

									div(class="row")
										div(class="col s12")
											select(name="rol" id="heredad")
												each campo in roles
													option(value="#{campo.id}", selected=(usuario.rol_id == campo.id))= campo.nombre
									div(class="row")

										div(class="col s6")

											button(class="btn waves-effect indigo waves-light col s12" type="submit" name="action") Actulizar
										div(class="col s6")

											a(class="btn waves-effect red waves-light col s12" href="/usuarios") No actulizar

					div(class="col s12 m2")		
					
	footer

	script(type="text/javascript" src="../../js/componentsMaterialize.js")