doctype html

html(lang='en')
	
head
	title SACOE
	meta(charset='utf-8')
	meta(name="viewport" content="width=device-width, initial-scale=1.0")
	link(rel="stylesheet" href='css/materialize.css')
	link(rel="stylesheet" href='css/main.css')
	link(rel="stylesheet" href='css/icon.css')
	link(rel="stylesheet" href='css/fuente.css')
	script(type="text/javascript" src="js/jquery-2.1.1.min.js")
	script(type="text/javascript" src="js/materialize.min.js")
	
	
body(class="Oswald")

	-//Modal para mostrar en caso de error en los datos
	div(id="modal1" class="modal")
		div.row
			div.col.s12.center
				i(class="material-icons large red-text") error

		div.row
			div.col.s12.center
				h4 Error
			
		div.row
			div.col.s12.center
				h5 Etimado usuario, para ingresar al sistema debera proporcionar datos correctos.
		
		div.col.s12.center
				div.row.center
					.col.s3
					a(href="#!" class="col s6 modal-action modal-close btn green large") Entendido
					.col.s3
			


	div(class="row margen-superior")

		div(class="col s1 m3 l4")
		
		div(class="col s10 m7 l4 card-panel center")
		
			div(class="row center")

				i(class="large material-icons indigo-text") account_circle
				
				form(method="post" action="/login" class="col s12")

					div(class="row")

						div(class="input-field col s12")
							i(class="material-icons prefix") perm_identity
							input(id="nombre" type="text" name="nombre" class="validate")
							label(for="nombre" data-error="Usuario incorrecto!" data-success="Usuario correcto!") Usuario

					div(class="row")

						div(class="input-field col s12")
							i(class="material-icons prefix") vpn_key
							input(id="password" type="password" name="password" class="validate")
							label(for="password" data-error="Contraseña incorrecta!" data-success="Contraseña correcta!") Contraseña

					div(class="row")
						button(class="btn waves-effect indigo waves-light" type="submit" name="action") Iniciar
		div(class="col s1 m3 l4")
					
	script(type="text/javascript" src="js/valid.js")